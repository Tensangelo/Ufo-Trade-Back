{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES6",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "baseUrl": "./src",
        "paths": {
            "@config/*": ["config/*"],
            "@constants/*": ["constants/*"],
            "@models/*": ["models/*"],
            "@controllers/*": ["controllers/*"],
            "@routes/*": ["routes/*"],
            "@middlewares/*": ["middlewares/*"],
            "@utils/*": ["utils/*"],
        },
    },
    "exclude": ["node_modules", "dist"]
}